<% provide(:title, 'Sign up') %>

<div class="row">
  <div class="col-xs-12">

<h1>登録</h1>


    <%= form_for(@user) do |f| %>
      <%= f.label :名前 %>
      <%= f.text_field :name, placeholder: "名前を入力してください" %>

      <%= f.label :メールアドレス %>
      <%= f.email_field :email, placeholder: "メールアドレスを入力してください" %>

      <%= f.label :パスワード %>
      <%= f.password_field :password, placeholder: "６文字以上" %>

      <%= f.label :password_confirmation, "パスワード再確認" %>
      <%= f.password_field :password_confirmation, placeholder: "もう一度パスワードを入力してください" %>

      <%= f.submit "登録する", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
