<% provide(:title, 'Sign up') %>
<h1>登録</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3 col-xs-12">
    <%= form_for(@user, url: signup_path) do |f| %>
      <%= render 'shared/error_messages' %>
      <%= f.label :名前 %>
      <%= f.text_field :name, placeholder: "名前を入力してください", class: 'form-control' %>

      <%= f.label :メールアドレス %>
      <%= f.email_field :email, placeholder: "メールアドレスを入力してください", class: 'form-control' %>

      <%= f.label :パスワード %>
      <%= f.password_field :password, placeholder: "６文字以上", class: 'form-control' %>

      <%= f.label :password_confirmation, "パスワード再確認" %>
      <%= f.password_field :password_confirmation, placeholder: "もう一度パスワードを入力してください", class: 'form-control' %>

      <%= f.submit "登録する", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
